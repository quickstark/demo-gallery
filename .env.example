# Application Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
VITE_API_URL=http://localhost:8000

# Environment
VITE_ENVIRONMENT=development

# Datadog Configuration
VITE_DATADOG_APPLICATION_ID=your-application-id
VITE_DATADOG_CLIENT_TOKEN=your-client-token
VITE_DATADOG_SITE=datadoghq.com
VITE_DATADOG_SERVICE=demo-gallery
VITE_RELEASE=1.0.0

# CircleCI Environment Variables (set in CircleCI contexts)
# These should NOT be in your .env file, only in CircleCI

# Docker Hub Context (context: docker-hub)
# DOCKER_USERNAME=your-dockerhub-username
# DOCKER_PASSWORD=your-dockerhub-access-token

# Tailscale Context (context: tailscale)
# TAILSCALE_OAUTH_CLIENT_ID=your-oauth-client-id
# TAILSCALE_OAUTH_CLIENT_SECRET=your-oauth-secret

# Deployment Context (context: deployment)
# DEPLOY_HOST=your-tailscale-hostname
# DEPLOY_USER=your-ssh-username
# SSH_PRIVATE_KEY=base64-encoded-private-key
# CONTAINER_NAME=demo-gallery
# CONTAINER_PORT=3001
# TRAEFIK_HOST=demo-gallery.yourdomain.com

# Application Config Context (context: app-config)
# All VITE_* variables should also be set in this context for runtime injection

# Development-specific deployment context (context: deployment-dev)
# Similar to deployment context but for dev environment

# Development-specific app config (context: app-config-dev)
# VITE_* variables with development values

# Authentication Settings
VITE_USE_AUTH=false  # Set to "true" if API requires authentication
VITE_AUTH_USERNAME=   # Only needed if VITE_USE_AUTH=true
VITE_AUTH_PASSWORD=   # Only needed if VITE_USE_AUTH=true

# CircleCI Configuration (for deployment script)
CIRCLECI_API_TOKEN=   # Get from https://app.circleci.com/settings/user/tokens
CIRCLECI_ORG=         # Your GitHub organization/username
CIRCLECI_PROJECT=demo-gallery
CIRCLECI_CONTEXT=app-config
